    <link href='https://fonts.googleapis.com/css?family=Raleway:400,700,600|Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/css/alertify.core.css" rel="stylesheet" />
    <link href="~/lib/css/alertify.bootstrap.css" rel="stylesheet" />
    @*style main*@
