                        </li>
                        <li class="margin-left-medium" style="font-size: 14px;">
                            <a href="birthdays" style="color: #333 ;">
                                Sinh nhật
                            </a>
                        </li>
                        <li class="margin-left-medium" style="font-size: 14px;">
                            <a href="care-and-encouragement" style="color: #333 ;">
                                Động viên
                            </a>
                        </li>
                        <li class="margin-left-medium" style="font-size: 14px;">
                            <a href="topics/thanks.html" style="color: #333 ;">
                                Cảm ơn
                            </a>
                        </li>
                        <li class="margin-left-medium" style="font-size: 14px;">
                            <a href="topics/get-well.html" style="color: #333 ;">
                                Chào hỏi
                            </a>
                        </li>
                        <li class="margin-left-medium" style="font-size: 14px;">
                            <a href="topics/thinking-of-you.html" style="color: #333 ;">
                                Tình yêu
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @*end spotlight*@

    <div class="container">
        @RenderBody()
    </div>

    @*footer*@
    <div class="container">

        <div class="row margin-bottom-large" id="accordion" role="tablist" aria-multiselectable="true">
        </div>
        <div id="footer" class="margin-bottom-large">
            <footer class="row">
                <div class="col-md-12">
                    <div class="Footer_Main_Container row">
                        <div class="col-md-3">
                            <a href="#" rel="nofollow">
                                <img class="img-responsive" style="width:194px;height:33px;"
                                     src="~/imgs/logo/eCardsLogo.png">
                            </a>
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-md-12 Description">
                                    Trang web gửi thiệp online miễn phí
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <ul class="list-inline">
                                        <li>
                                            <a href="#" rel="nofollow" class="">Thiệp online</a>
                                        </li>
                                        <li>
                                            <a href="#" rel="nofollow" class="">Thiệp của bạn</a>
                                        </li>
