    @RenderSection("styles",required:false)

    <script src="node_modules/es6-shim/es6-shim.min.js"></script>
    <script src="node_modules/zone.js/dist/zone.js"></script>
    <script src="node_modules/reflect-metadata/Reflect.js"></script>
    <script src="node_modules/systemjs/dist/system.src.js"></script>
    
    <title>@ViewBag.Title</title>
    <script src="~/lib/js/systemjs.config.js"></script>
    <script type="text/javascript">
        System.import('app').catch(console.log.bind(console));
    </script>
</head>
<body>
    @*header, tieu de*@
    <header id="scroller">
        <nav class="navbar navbar-default ccards-navbar margin-bottom-small accelerate" style="border-bottom: 1px solid #ccc; z-index: 9999;">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        <img class="img-responsive img-logo" style="width:150px;height:25px;" src="~/imgs/logo/eCardsLogo.png" alt="Greetingcards.vn" />
                    </a>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                Thiệp online <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/">Tất cả</a></li>
                                <li class="divider">Ngày lễ</li>
                                <li><a href="/animals">Sinh nhật</a></li>
                                <li><a href="/anniversary">Tình yêu</a></li>
                                <li><a href="/birthdays">Cảm ơn</a></li>
                                <li><a href="/business-greetings">Hỏi thăm</a></li>
                                <li><a href="/care-and-encouragement">Chia sẻ &amp; Động viên</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">
                                Tạo thiệp của bạn
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Giới thiệu
                            </a>
                        </li>
                        <li>
                            <a href="blog">Bài viết</a>
                        </li>
                        <li>
                            <a href="help">Trợ giúp</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="search-btn search-collapse">
                            <a class="btn btn-default hidden-xs" href="javascript:void(0);">
                                <i class="fa fa-search"></i>
                            </a>
                            <a href="javascript:void(0);" class="black-text visible-xs">
                                Search
                            </a>
                        </li>
                        <li class="search-box" style="display: none;">
                            <form action="//" method="GET" class="navbar-form navbar-left" role="search">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" name="q" class="form-control" placeholder="Search">
                                        <span class="input-group-btn">
                                            <a class="btn btn-danger search-btn-close">
                                                <i class="fa fa-close"></i>
                                            </a>
                                        </span>
                                    </div>
                                </div>
                                <button class="hidden btn btn-default" type="submit">Search</button>
                            </form>
                        </li>
                        <li class="hidden-xs search-collapse">
                            <a class="btn btn-default" href="https://www.facebook.com/greetingcard.vn/">
                                <i class="fa fa-facebook"></i>
                            </a>
                        </li>
                        <li class="hidden-xs search-collapse">
                            <a class="btn btn-default" href="#">
                                <i class="fa fa-twitter"></i>
                            </a>
                        </li>
                        <li class="dropdown search-collapse">
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown">Đăng nhập<strong class="caret"></strong></a>
                            <div class="dropdown-menu" style="padding:20px;min-width:300px;">
                                <form method="post" action="login" accept-charset="UTF-8">
                                    <div class="form-group">
                                        <input class="form-control" type="text" placeholder="Tên đăng nhập" id="username" name="username">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="password" placeholder="Mật khẩu" id="password" name="password">
                                    </div>
                                    <div class="checkbox-inline">
                                        <input id="ckRemember" class="checkbox" type="checkbox" value="true">
                                        <label for="ckRemember">Nhớ mật khẩu</label>
                                    </div>
                                    <button class="apSignInBtn btn btn-crosscards-primary btn-block text-left" data-app="cc">
                                        <i class="fa fa-sign-in margin-right-small"></i> Đăng nhập
                                    </button>
                                    <hr />
                                    @*<label style="text-align:center;margin-top:5px">Hoặc</label>*@
                                    <a class="btn btn-block btn-social btn-google-plus">
                                        <i class="fa fa-google-plus"></i> Sign in with Google
                                    </a>
                                    <a class="btn btn-block btn-social btn-facebook">
                                        <i class="fa fa-facebook"></i> Sign in with Facebook
                                    </a>
                                    @*<input class="btn btn-crosscards-primary btn-block text-left" type="button" id="sign-in-google" value="Đăng nhập bằng Google">
                                        <input class="btn btn-crosscards-primary btn-block text-left" type="button" id="sign-in-facebook" value="Đăng nhập bằng Facebook">*@
                                </form>
                            </div>
                            @*<a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Đăng nhập<span class="caret"></span></a>
                                                <ul class="dropdown-menu" role="menu" style="padding: 20px; min-width: 200px;">
                                                <li class="margin-bottom-small">
                                        <button class="apSignInBtn btn btn-crosscards-primary btn-block text-left" data-app="cc">
                                            <i class="fa fa-sign-in margin-right-small"></i> Đăng nhập
                                        </button>
                                    </li>
                                    <li>
                                        <button class="apSignUpBtn btn btn-crosscards-primary btn-block text-left" data-app="cc">
                                            <i class="fa fa-user-plus margin-right-small"></i> Tạo tài khoản
                                        </button>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <button class="apForgotBtn btn btn-default btn-block text-left" data-app="cc">
                                            <i class="fa fa-question margin-right-small"></i> Quên mật khẩu
                                        </button>
                                    </li>
                                </ul>*@
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


    </header>
    @*end header, tieu de*@
    @*noi bat, spotlight*@
    <div id="spotlight" class="margin-bottom-small hidden-xs">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-inline">
                        <li>
                            <h2 class="margin-none margin-bottom-small black-text" style="background: rgb(213, 213, 213) none repeat scroll 0 0; border-radius: 10px; color: rgb(255, 255, 255) !important; font-size: 16px; font-variant: small-caps; padding: 2px 5px;">Thiệp</h2>
                        </li>
                        <li class="margin-left-medium" style="font-size: 14px;">
                            <a href="holidays/easter" style="color: #333 ;">
